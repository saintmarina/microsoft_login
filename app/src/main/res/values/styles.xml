<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="viewParent">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="parent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>


    <style name="viewParent.headerText">
        <item name="android:textColor">@color/primaryDarkerTextColor</item>
        <item name="android:textSize">@dimen/headerTextSize</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="viewParent.smallHeader">
        <item name="android:textColor">@color/primaryTextColor</item>
        <item name="android:textSize">@dimen/smallTextSize</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="modifiedEditText" parent="parent">
        <item name="android:textSize">@dimen/editTextSize</item>
        <item name="android:backgroundTint">@color/white</item>

    </style>

    <style name="loginButton" parent="viewParent">
        <item name="android:background">@drawable/button_background_blue</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginBottom">10dp</item>
    </style>

    <style name="otherMethodStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="parent.confirmationText" parent="parent">
        <item name="android:gravity">center</item>
        <item name="android:layout_marginBottom">@dimen/viewsMargin</item>
    </style>

    <style name="parent.confirmationText.Medium" parent="parent.confirmationText">
        <item name="android:textSize">@dimen/editTextSize</item>
    </style>Â®
</resources>